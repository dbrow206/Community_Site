
<%- include('../partials/header.ejs')%>
<div class = "orange">
    <h2>Welcome, <%=user.firstName%></h2>

    <%if(connections.length){%>
        <p>You have created the following connections</p>
        <table>
        
            <tr>
                <th>Connection Name </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        
      
        <%connections.forEach(connection =>{ %>
             <tr>
            <form>
                <td><%=connection.name%></td>  
                <td><button type = "submit" formmethod="GET" formaction="/connections/<%=connection.id%>/edit">Edit</button></td>
                <td><button type = "submit" formmethod="POST" formaction="/connections/<%=connection.id%>?_method=DELETE">Delete</button></td>
            </form>
        </tr>
        <%});
    %>
</table>
   <% }else{%>
        <p>You have not created any connections</p>
   <% } %>
   </div>
<div class ="green">
   <%if(rsvps.length){%>
    <p>You RSVP'd to these connections</p>
    <table>
        
        <tr>
            <th>Connection Name      </th>
            <th>RSVP Status    </th>
            <th>Update     </th>
            <th>Delete   </th>
        </tr>
     
  
    <%rsvps.forEach(rsvp =>{ %>
        <tr>
            <td><%=rsvp.connection.name%></td> 
            <td><%=rsvp.rsvp%></td>
            <form>
                <td><button formmethod= "get" formaction="/connections/<%=rsvp.connection._id%>">Update</button></td>
                <td><button formmethod= "POST" formaction="/connections/<%=rsvp.connection._id%>/rsvp?_method=DELETE">Delete</button></td>
            </form>  
            
        </tr> 
    <%});
%>
</table>
<% }else{%>
    <p>You have RSVP'd to any events</p>
<% } %>
</div>
    <%- include('../partials/footer.ejs')%>
