<%- include('./partials/header.ejs')%>


  <h1>Commuity Service</h1>
  <div class = "centOut">
  <form>

    <label for="eventName">Event Name:</label>
    <input type="text" id="eventName" name="eventName">

    <label for="eventHost">Event Host:</label>
    <input type="text" id="eventHost" name="eventHost">

    <label for="eventLoc">Event Location:</label>
    <input type="text" id="eventLoc" name="eventLoc">   
    
    <label for="eventDate">Event Date:</label>
    <input type="date" id="eventDate" name="eventDate">

    <label for="eventDesc">Event Description:</label>
    <textarea id="eventDesc" name="eventDesc" rows="4" cols="50">Please enter a small description about the event you are creating and what it actually involves.</textarea><br>
   
    <label for="eventImage">Submit an image!:</label>
    <input type="file" id="eventImage" name="eventImage" accept="image/*"><br>
  
    <input type="submit">

  </form>
</div>
